{#
/**
 * @file
 * Template for a Figure component.
 *
 * Available config:
 * - figure_utility_classes: An array of utility classes.
 * - align: left|right|center
 */
#}
{% apply spaceless %}

{% set figure_classes = ['figure', align ? 'text-' ~ align]|merge(figure_utility_classes ?: []) %}

<figure {{ attributes.addClass(figure_classes) }}>
  {% block image %}
    {{ image }}
  {% endblock %}

  {% block caption %}
    {% if caption %}
      <figcaption class="figure-caption">
        {{ caption }}
      </figcaption>
    {% endif %}
  {% endblock %}
</figure>

{% endapply %}
