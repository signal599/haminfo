{#
/**
* @file
* Template for the comment field.
*/
#}
{% apply spaceless %}

{% set field_comment_attributes = attributes ?: create_attribute() %}
<section {{ field_comment_attributes }}>
  {{ title_prefix }}
  {{ title_suffix }}

  {{ comments }}

  {% if comment_form %}
    <div class="row">
      <div class="col-md-10 offset-md-2">
        <div class="card">
          <div class="card-header">{{ 'Add new comment'|t }}</div>
          <div class="card-body">{{ comment_form }}</div>
        </div>
      </div>
    </div>
  {% endif %}
</section>

{% endapply %}
